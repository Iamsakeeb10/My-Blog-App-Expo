import { NavigationContainer } from "@react-navigation/native";
import { createNativeStackNavigator } from "@react-navigation/native-stack";
import { StatusBar } from "expo-status-bar";
import React, { useState } from "react";
import { StyleSheet, View } from "react-native";
import DropDownPicker from "react-native-dropdown-picker";
import BlogDetails from "./components/BlogDetails";
import HomeScreen from "./components/HomeScreen";
import IconButton from "./components/UI/IconButton";

const Stack = createNativeStackNavigator();

const App = () => {
  const [sortOption, setSortOption] = useState(null);
  const [isDropdownOpen, setIsDropdownOpen] = useState(false);

  const toggleDropdown = () => {
    setIsDropdownOpen(!isDropdownOpen);
  };

  return (
    <>
      <StatusBar style="light" />
      <NavigationContainer>
        <Stack.Navigator
          screenOptions={{
            headerStyle: {
              backgroundColor: "#153448",
            },
            contentStyle: {
              backgroundColor: "#B6C4B6",
            },
            headerTitleStyle: {
              color: "#EEEEEE",
              fontSize: 21,
            },
            headerRight: () => (
              <View style={styles.dropdownContainer}>
                <IconButton
                  icon="funnel-outline"
                  size={24}
                  color="#fff"
                  onPress={toggleDropdown}
                />
                {isDropdownOpen && (
                  <DropDownPicker
                    items={[
                      { label: "ID Ascending", value: "idAsc" },
                      { label: "ID Descending", value: "idDesc" },
                    ]}
                    defaultValue={sortOption}
                    containerStyle={{ height: 40, width: 120 }}
                    style={{ backgroundColor: "#153448" }}
                    itemStyle={{
                      justifyContent: "flex-start",
                    }}
                    dropDownStyle={{ backgroundColor: "#153448" }}
                    onChangeItem={(item) => setSortOption(item.value)}
                  />
                )}
              </View>
            ),
            headerTintColor: "#EEEEEE",
          }}
        >
          <Stack.Screen
            name="MyBlogs"
            component={HomeScreen}
            options={{
              title: "My Blogs",
            }}
          />
          <Stack.Screen
            name="BlogDetails"
            component={BlogDetails}
            options={({ navigation }) => ({
              headerLeft: ({ tintColor }) => (
                <IconButton
                  icon="return-up-back-outline"
                  size={24}
                  color={tintColor}
                  onPress={() => navigation.goBack()}
                />
              ),
              headerTitleAlign: "center",
              title: "Blog Insights",
            })}
          />
        </Stack.Navigator>
      </NavigationContainer>
    </>
  );
};

export default App;

const styles = StyleSheet.create({
  dropdownContainer: {
    flexDirection: "row",
    alignItems: "center",
  },
});
